{
	"name": "next-kit",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "next dev --turbopack",
		"build": "next build",
		"start": "next start",
		"lint": "next lint",
		"db:studio": "drizzle-kit studio",
		"db:check": "drizzle-kit check",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "tsx --env-file .env ./.kit/db/scripts/migrate.ts",
		"db:seed": "tsx --env-file .env ./.kit/db/scripts/seed.ts",
		"db:truncate": "tsx --env-file .env ./.kit/db/scripts/truncate.ts",
		"db:drop-tables": "tsx --env-file .env ./.kit/db/scripts/drop-tables.ts",
		"db:drop": "drizzle-kit drop",
		"db:reset": "pnpm run db:drop-tables && pnpm run db:drop && pnpm run db:migrate && pnpm run db:generate && pnpm run db:migrate && pnpm run db:seed",
		"db:reseed": "pnpm run db:truncate && pnpm run db:seed",
		"db:introspect": "drizzle-kit introspect",
		"db:auth": "npx @better-auth/cli generate --config ./.kit/auth/index.ts --output ./lib/db/tables/auth.ts"
	},
